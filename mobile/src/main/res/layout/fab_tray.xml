<com.dot.calculator.material.view.SolidPadLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tray"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_gravity="bottom"
    android:background="@color/pad_numeric_background_color"
    android:columnCount="3"
    android:rowCount="1"
    android:visibility="invisible"
    custom:preventParentTouchEvents="true">

    <ImageButton
        android:id="@+id/btn_advanced"
        style="@style/FabTray"
        android:contentDescription="@string/panel_advanced"
        android:src="@drawable/tray_btn_advanced" />

    <ImageButton
        android:id="@+id/btn_hex"
        style="@style/FabTray"
        android:contentDescription="@string/panel_hex"
        android:src="@drawable/tray_btn_hex" />

    <ImageButton
        android:id="@+id/btn_matrix"
        style="@style/FabTray"
        android:contentDescription="@string/panel_matrix"
        android:src="@drawable/tray_btn_matrix"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/btn_close"
        style="@style/FabTray"
        android:contentDescription="@string/panel_close_btn"
        android:src="@drawable/tray_btn_close" />

</com.dot.calculator.material.view.SolidPadLayout>
